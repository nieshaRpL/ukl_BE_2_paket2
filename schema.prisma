generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User{
  id_user Int @id @default(autoincrement())
  nama_user String
  username String @unique
  password String
  role Role
  peminjaman Peminjaman[]
}

model Inventory {
  id_inventory Int @id @default(autoincrement())
  nama_inventory String
  kategori String
  lokasi String
  quantity Int
  peminjaman Peminjaman[]
}

model Peminjaman {
  id_peminjaman Int @id @default(autoincrement())
  id_user Int
  id_inventory Int
  qty Int
  tgl_peminjaman DateTime @db.Date
  tgl_pengembalian DateTime @db.Date
  status Status @default(dipinjam)
  barang Inventory @relation(fields: [id_inventory], references: [id_inventory])
  user User @relation(fields: [id_user], references: [id_user])
}

enum Status{
  kembali
  dipinjam
}

enum Role{
  admin
  member
}

